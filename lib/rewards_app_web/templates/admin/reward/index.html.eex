<h2>Rewards given by <%= @member.name %> in <%= @pool.year %> - <%= @pool.month %></h2>

<table>
  <thead>
    <tr>
      <th>Receiver</th>
      <th>Points</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for reward <- @rewards do %>
    <tr>
      <td><%= reward.receiver.name %></td>
      <td><%= reward.points %></td>

      <td>
        <span><%= link "Delete", to: Routes.admin_member_pool_reward_path(@conn, :delete, @member, @pool, reward), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
<span><%= link "Back", to: Routes.admin_member_path(@conn, :show, @member) %></span>
